<UserControl x:Class="StreamCompanion.Uic.StatisticUic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StreamCompanion.Uic"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <GroupBox Header="List">
            <StackPanel>
                <Label Content="Serie count"/>
                <Label Content="Episode count"/>
                <Label Content="Life spent watching"/>
                <Label Content="Mean score"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Score distribution">
            <StackPanel>
                <Label Content="10"/>
                <Label Content="9"/>
                <Label Content="..."/>
                <Label Content="1"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Recent history"/>
    </StackPanel>
</UserControl>
